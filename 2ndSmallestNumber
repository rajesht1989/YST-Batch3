int smallestNumber(int a,int b,int c,int d)
{
    if(a<=b)
    {
        if(a<=c)
        {
            if(a<=d)
            {
                printf("2nd smallest number is%d",a);
            }     
            
    
    }
        }
    

else
 if(b<=c)
{ 
