//get number from user print Hello inverted triangle

#include<stdio.h>
int getNumberFromUser()
{
    int v;
    printf("enter a number");
    scanf("%d",&v);
    return v;
}
int hellowInvertedTriangle (int n)
{
    for(int i=0;i<=n;i++)
    {
        for(int j=i;j<=n;j++)
        {
            if(i==0||j==i||j==n)
            {
                printf("*\t");
                
            }
            else
{
    printf("\t");

}

        }
        printf("\n");
    }
}
void main()
{
    int n= getNumberFromUser();
    hellowInvertedTriangle(n);
}
