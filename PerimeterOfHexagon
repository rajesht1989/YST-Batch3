// get number from user identify  hexagon of perimeter
//p=6a

#include<stdio.h>
int getNumberFromUser()
{
    int m; 
    printf("Enter a number");
    scanf("%d",&m);
    return m;
}

 int hexagonOfPerimeter(int a)
{
    return 6*a;
}

void main() 
{
    int a=getNumberFromUser();
   
    int p= hexagonOfPerimeter(a);
    
}
