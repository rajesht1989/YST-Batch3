//Requirement:Find the area of square and print

#include <stdio.h>
void main () {
     int area = areaofsquare(4);
     printf("Area is %d",area);
}

int areaofsquare(int side) {
    return side*side;
    
}


//Requirement:find the area of the rectangle and print

#include <stdio.h>

void main () {
int w=5;
int l=10;
int a=w*l;
printf("the area of the rectangle %d",a);
}


//Requirement:find the area of the circle and print

#include <stdio.h>
void main () {
float r=2;
float a=3.14*r*r;
printf("area of circle %f",a);
}



//Requirement:find the area of triangle and print

#include <stdio.h>
void main () {
float h=3;
float b=5;
float a=h*b/2;
printf ("area of triangle %f",a);
}


perimeter 👇🏾



//Requirement:Find the perimeter  of the square and print

#include <stdio.h>
void main () {
int a=2;
int p=4*a; 
printf("perimeter of the square %d",p);
}




//Requirement:find the perimeter of rectangle and print

#include <stdio.h>
void main () {
int l=5;
int w=3;
int p=2*(l+w);
printf("perimeter of rectangle %d",p);

}



//Requirement: find the perimeter of the triangle and print

#include <stdio.h>
void main () {
int a=5;
int b=5;
int c=5;
int p=a+b+c;
printf("the area of the triangle %d",p);
}




//Requirement:find the perimeter of the circle and print

#include <stdio.h>
void main () {
float r=4;
float p=2*3.14*r;
printf("the perimeter of the circle %f",p);

}


//Requirement:find the perimeter of hexagon and print

#include <stdio.h>
void main () {
int a=2;
int p=6*a;
printf("the perimeter of hexagon %d",p);
}


//Requirement:find the perimeter of pentagon and print

#include <stdio.h>
void main () {
int a=2;
int p=5*a;
printf("the perimeter of the pentagon %d",p);
}
