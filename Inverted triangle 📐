//get number from user print   inverted triangle on console

#include<stdio.h>
int getNumberFromUser()
{
   int r;
   printf("enter the number");
   scanf("%d",&r);
   return r;
}
int invertedtriangle(int a)
{
 for (int i=1;i<=a;i++)
  {
   for(int j=a;j>=i;j--)
  {
   printf("%d\t",j);
  }
    printf("\n");
}
}
void main()

{
int a=getNumberFromUser();
invertedtriangle (a);
}
