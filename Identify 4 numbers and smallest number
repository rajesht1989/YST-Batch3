// Get 4 Numbers from user and identify the smallest number and print on console
#include <stdio.h>

int getNumberFromUser() {
    int value;
    printf("Enter the Number ");
    scanf("%d", &value);
return value;
}

int smallestOf(int i, int j, int k,int l) {
    if (j<i  && k<i  && l<i) {
        return i;
} else {
    if (j < k) {
        return k;
    } else {
        return j;
    }
    if (k < l){
        return l;
    } else {
        return k;
    }
}
}

void main() {
    int a = getNumberFromUser(), b = getNumberFromUser(), c = getNumberFromUser(),d= getNumberFromUser();
    printf("Smallest is %d", smallestOf(a, b, c, d));
}
