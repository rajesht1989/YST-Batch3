//get number from user print  pyramid on console
#include<stdio.h>
int getNumberFromUser()
{
    int v;
    printf("enter the number");
    scanf("%d",&v);
    return v;
}
int pyramid (int a)
{
    for (int i=1;i<=a;i++)
    {
        for(int j=1;j<=i;j++)
        {
            printf("%d\t",j);
    }
    printf("\n");
}
}
void main()

{
int a=getNumberFromUser();
pyramid (a);
}
