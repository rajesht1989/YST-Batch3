// Get 2 Number from user and identify the smallest number and print on console
#include <stdio.h>

int getNumberFromUser() {
    int value;
    printf("Enter the Number ");
    scanf("%d", &value);
return value;
}

int smallestOf(int i, int j) {
    if (i < j) {
        return i;
} else {
    return j;
    }
}

void main() {
    int a = getNumberFromUser(), b = getNumberFromUser();
    printf("Smallest is %d",smallestOf(a,b ));
}
