// Get 4 Numbers from user and identify the greater number and print on console
#include <stdio.h>

int getNumberFromUser() {
    int value;
    printf("Enter the Number ");
    scanf("%d", &value);
return value;
}

int biggestOf(int i, int j, int k,int l) {
    if (i > j && i > k && i>l) {
        return i;
} else {
    if (j > k) {
        return j;
    } else {
        return k;
    }
    if (k>l){
        return k;
    } else {
        return l;
    }
}
}

void main() {
    int a = getNumberFromUser(), b = getNumberFromUser(), c = getNumberFromUser(),d= getNumberFromUser();
    printf("Biggest is %d", biggestOf(a, b, c, d));
}
