// Get 4 Numbers from user and identify the greater number and print on console
#include <stdio.h>

float getNumberFromUser() {
    float value;
    printf("Enter the Number ");
    scanf("%f", &value);
return value;
}

float biggestOf(float i, float j, float k, float l) {
    if (i > j && i > k && i > l) {
        return i;
} else {
    if (j > k) {
        return j;
    } else {
        return k;
    }
    if (k>l){
        return k;
    } else {
        return l;
    }
}
}

void main() {
    float a = getNumberFromUser(), b = getNumberFromUser(), c = getNumberFromUser(),d= getNumberFromUser();
    printf("Biggest is %f", biggestOf(a, b, c, d));
}
