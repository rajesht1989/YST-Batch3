.// Get 3 Number from user and identify the smallest number and print on console
#include <stdio.h>

float getNumberFromUser() {
    float value;
    printf("Enter the Number ");
    scanf("%f", &value);
return value;
}

float smallestOf(float i, float j, float k) {
    if (j < i && k < i) {
        return i;
} else {
    if (j < k) {
        return k;
    } else {
        return j;
    }
}
}

void main() {
    float a = getNumberFromUser(), b = getNumberFromUser(), c = getNumberFromUser();
    printf("Smallest is %f",smallestOf(a, b, c));
}
